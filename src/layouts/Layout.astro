---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import Logo from "../components/Logo.astro";
import Navbar from "../components/nav/Navbar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/NutriNest.svg" />
		<meta name="description" content="NutriNest es ofrecer productos que cuiden de su salud, proporcionando los mejores alimentos naturales y nutritivos.">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body class="grid xl:grid-cols-2 h-screen">
		<div class="h-screen">
			<Logo/>
		</div>
		<div class="h-screen bg-[#F3F0ED] text-black flex flex-col px-4 mobile:px-12 sm:px-24">
			<Navbar/>
			<div class="flex-1 grid items-center overflow-hidden">
				<slot />
			</div>
		</div>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		scroll-behavior: smooth;
	}
	body{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		overflow-y: scroll;
	}
	::-webkit-scrollbar{
		width: 7px;
		height: 5px;
		background-color: #F3F0ED;
	}
	::-webkit-scrollbar-thumb{
		background-color: #121212 ;
		border-radius: 5px;
	}

	code {
		font-family:
			system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
</style>
